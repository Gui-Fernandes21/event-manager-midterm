<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" type="text/css" href="/main.css" />
		<title><%= siteInfo.name %> - Welcome</title>
	</head>
	<body>
		<div class="container">
			<header class="header">
				<div class="header-content">
					<h1>Welcome to <%= siteInfo.name %></h1>
					<p class="site-description"><%= siteInfo.description %></p>
				</div>
				<div class="header-actions">
					<% if (typeof user !== 'undefined' && user) { %>
					<div class="nav-user-info">
						Welcome back,
						<span class="nav-user-name"><%= user.user_name %></span>
					</div>
					<a href="/auth/logout" class="btn btn-logout">Logout</a>
					<% } else { %>
					<a href="/auth/login" class="btn btn-secondary">Login</a>
					<a href="/auth/register" class="btn btn-outline">Sign Up</a>
					<% } %>
				</div>
			</header>

			<main class="homepage-content">
				<div class="welcome-section">
					<div class="welcome-text">
						<h2>Choose Your Experience</h2>
						<p class="welcome-description">
							Whether you're organizing events or looking to attend amazing
							experiences, we have the perfect tools for you. Select your path
							below to get started.
						</p>
					</div>
				</div>

				<div class="portal-cards">
					<div class="portal-card organizer-card">
						<div class="portal-icon">üéØ</div>
						<div class="portal-content">
							<h3>Organizer Portal</h3>
							<p>
								Create, manage, and publish your events. Track bookings, handle
								ticket sales, and organize memorable experiences for your
								attendees.
							</p>
							<ul class="portal-features">
								<li>Create and edit events</li>
								<li>Manage ticket types and availability</li>
								<li>Publish events to attendees</li>
								<li>Track bookings and manage settings</li>
							</ul>
						</div>
						<div class="portal-action">
							<a href="/organizer" class="btn btn-primary btn-large">
								Go to Organizer Home Page
							</a>
						</div>
					</div>

					<div class="portal-card attendee-card">
						<div class="portal-icon">üéüÔ∏è</div>
						<div class="portal-content">
							<h3>Attendee Portal</h3>
							<p>
								Discover exciting events happening around you. Browse available
								events, view details, and book your tickets with ease.
							</p>
							<ul class="portal-features">
								<li>Browse upcoming events</li>
								<li>View detailed event information</li>
								<li>Book tickets instantly</li>
								<li>Manage your bookings</li>
							</ul>
						</div>
						<div class="portal-action">
							<a href="/attendees" class="btn btn-success btn-large">
								Go to Attendee Home Page
							</a>
						</div>
					</div>
				</div>

				<div class="features-section">
					<h2>Why Choose EventFlow Manager?</h2>
					<div class="features-grid">
						<div class="feature-item">
							<div class="feature-icon">‚ö°</div>
							<h4>Fast & Easy</h4>
							<p>Quick event creation and seamless booking experience</p>
						</div>
						<div class="feature-item">
							<div class="feature-icon">üîí</div>
							<h4>Secure</h4>
							<p>
								Your data and bookings are protected with enterprise-grade
								security
							</p>
						</div>
						<div class="feature-item">
							<div class="feature-icon">üì±</div>
							<h4>Mobile Friendly</h4>
							<p>Access from any device - desktop, tablet, or smartphone</p>
						</div>
						<div class="feature-item">
							<div class="feature-icon">üé®</div>
							<h4>Beautiful Design</h4>
							<p>Modern, intuitive interface that's a pleasure to use</p>
						</div>
					</div>
				</div>

				<div class="cta-section">
					<h2>Ready to Get Started?</h2>
					<p>
						Join thousands of organizers and attendees who trust EventFlow
						Manager for their event needs.
					</p>
					<div class="cta-buttons">
						<% if (typeof user === 'undefined' || !user) { %>
						<a href="/auth/register" class="btn btn-primary btn-large"
							>Create Account</a
						>
						<a href="/auth/login" class="btn btn-outline btn-large">Sign In</a>
						<% } else { %>
						<a href="/organizer" class="btn btn-primary btn-large"
							>Manage Events</a
						>
						<a href="/attendees" class="btn btn-success btn-large"
							>Browse Events</a
						>
						<% } %>
					</div>
				</div>
			</main>

			<footer class="homepage-footer">
				<div class="footer-content">
					<div class="footer-section">
						<h5><%= siteInfo.name %></h5>
						<p>Making event management simple and effective.</p>
					</div>
					<div class="footer-section">
						<h5>Quick Links</h5>
						<ul>
							<li><a href="/organizer">Organizer Portal</a></li>
							<li><a href="/attendees">Attendee Portal</a></li>
							<li><a href="/auth/login">Sign In</a></li>
							<li><a href="/auth/register">Sign Up</a></li>
						</ul>
					</div>
					<div class="footer-section">
						<h5>Support</h5>
						<ul>
							<li><a href="#help">Help Center</a></li>
							<li><a href="#contact">Contact Us</a></li>
							<li><a href="#terms">Terms of Service</a></li>
							<li><a href="#privacy">Privacy Policy</a></li>
						</ul>
					</div>
				</div>
				<div class="footer-bottom">
					<p>&copy; 2025 <%= siteInfo.name %>. All rights reserved.</p>
				</div>
			</footer>
		</div>

		<script>
			// Add hover animations to portal cards
			document.querySelectorAll(".portal-card").forEach((card) => {
				card.addEventListener("mouseenter", function () {
					this.style.transform = "translateY(-10px) scale(1.02)";
				});

				card.addEventListener("mouseleave", function () {
					this.style.transform = "translateY(0) scale(1)";
				});
			});

			// Add loading states to main action buttons when clicked
			document
				.querySelectorAll(".portal-action .btn, .cta-buttons .btn")
				.forEach((btn) => {
					btn.addEventListener("click", function () {
						if (this.href && !this.href.includes("#")) {
							this.innerHTML =
								this.innerHTML + ' <span style="opacity: 0.7;">...</span>';
							this.style.pointerEvents = "none";
						}
					});
				});

			// Fade in animation for features
			const observerOptions = {
				threshold: 0.1,
				rootMargin: "0px 0px -50px 0px",
			};

			const observer = new IntersectionObserver((entries) => {
				entries.forEach((entry) => {
					if (entry.isIntersecting) {
						entry.target.style.opacity = "1";
						entry.target.style.transform = "translateY(0)";
					}
				});
			}, observerOptions);

			// Observe feature items for animation
			document.querySelectorAll(".feature-item").forEach((item) => {
				item.style.opacity = "0";
				item.style.transform = "translateY(20px)";
				item.style.transition = "all 0.6s ease";
				observer.observe(item);
			});
		</script>
	</body>
</html>
